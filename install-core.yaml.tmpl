      serviceAccountName: calyptia-core
      automountServiceAccountToken: true
      securityContext:
        {}
      containers:
        - name: core
          securityContext:
            {}
          args:
            - -debug=true
          image: "ghcr.io/calyptia/core:1.2.2"
          imagePullPolicy: Always
          env:
            - name: CORE_INSTANCE_TAGS
              value: $CORE_INSTANCE_TAGS
            - name: CORE_INSTANCE_ENVIRONMENT
              value: default
            - name: CORE_INSTANCE_CLUSTER_LOGGING
              value: "false"
            - name: AGGREGATOR_NAME
              value: $CORE_INSTANCE_NAME
            - name: PROJECT_TOKEN
              value: $PROJECT_TOKEN
            - name: AGGREGATOR_FLUENTBIT_CLOUD_URL
              value: https://cloud-api.calyptia.com/
            - name: AGGREGATOR_FLUENTBIT_TLS_VERIFY
              value: "on"
            - name: AGGREGATOR_FLUENTBIT_TLS
              value: "on"
            - name: AGGREGATOR_SIDECAR_URL
              value: "nats://tcp-4222-nats-messaging.default.svc.local:4222"
          resources:
            {}
